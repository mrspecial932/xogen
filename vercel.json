{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  
    "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/dist/index.html" }

  ],
  "env": {
    "NODE_ENV": "production"
  }
}
